<section class="updateBook">
  <form action="/pages/update/<%= book.id %>?_method=PUT" method="POST">
    <input type="text" name="title" value="<%= book.title %>">
    <input type="text" name="authors" value="<%= book.authors %>">
    <input type="text" name="identifier" value="<%= book.identifier %>">
    <input type="text" name="thumbnail" value="<%= book.thumbnail %>">
    <textarea name="description"> <%= book.description %>"></textarea>
    <button type="submit">Update Book</button>
  </form>
</section>